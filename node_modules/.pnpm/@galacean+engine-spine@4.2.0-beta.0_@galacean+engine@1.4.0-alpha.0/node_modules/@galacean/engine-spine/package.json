{
  "version": "4.2.0-beta.0",
  "description": "galacean spine runtime",
  "name": "@galacean/engine-spine",
  "main": "dist/main.js",
  "browser": "dist/browser.js",
  "module": "dist/module.js",
  "dependencies": {
    "@esotericsoftware/spine-core": "~4.2.1"
  },
  "peerDependencies": {
    "@galacean/engine": ">=1.3.0-alpha.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-decorators": "^7.12.1",
    "@babel/plugin-proposal-optional-chaining": "^7.12.1",
    "@babel/plugin-transform-class-properties": "^7.24.7",
    "@babel/plugin-transform-object-assign": "^7.12.1",
    "@babel/preset-env": "^7.24.8",
    "@babel/preset-typescript": "^7.24.7",
    "@galacean/engine": "^1.3.0-alpha.3",
    "@galacean/engine-toolkit": "beta",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-inject": "^4.0.2",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@rollup/plugin-terser": "^0.4.3",
    "@swc/core": "^1.3.32",
    "@swc/helpers": "^0.5",
    "@types/chai": "^4.3.16",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.10",
    "@vitejs/plugin-basic-ssl": "^1.1.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^29.7.0",
    "chai": "^4.3.6",
    "chai-spies": "^1.0.0",
    "cross-env": "^5.2.1",
    "cypress": "^13.13.0",
    "cypress-recurse": "^1.35.3",
    "dat.gui": "^0.7.9",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-webgl-canvas-mock": "^2.5.3",
    "nock": "^13.5.4",
    "odiff-bin": "^3.0.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "regenerator-runtime": "^0.14.1",
    "rollup": "^2.32.0",
    "rollup-plugin-glslify": "^1.2.0",
    "rollup-plugin-modify": "^3.0.0",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-swc3": "^0.8.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-version-injector": "^1.3.3",
    "sass": "^1.77.8",
    "sinon": "^18.0.0",
    "ts-jest": "^29.2.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.3",
    "vite": "^5.3.4"
  },
  "ci": {
    "type": "aci",
    "versions": "12"
  },
  "files": [
    "types",
    "dist"
  ],
  "jest": {
    "runner": "jest-runner",
    "testEnvironment": "jsdom",
    "testEnvironmentOptions": {
      "url": "https://mdn.alipayobjects.com/",
      "userAgent": "Agent/007"
    },
    "preset": "ts-jest",
    "collectCoverage": true,
    "testRegex": "(/tests/.*\\.(test|spec))\\.ts?$",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.ts$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(.*@esotericsoftware/spine-core.*))"
    ],
    "setupFilesAfterEnv": [
      "./jest.setup.ts",
      "jest-webgl-canvas-mock"
    ]
  },
  "scripts": {
    "example": "vite",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "cross-env DEBUG_MODE=1 jest",
    "e2e:case": "vite serve ./e2e/.dev --config ./e2e/.dev/vite.config.js",
    "e2e": "cypress run --browser chrome --headless",
    "e2e:debug": "cypress open",
    "dev": "rollup -cw",
    "build": "npm run b:types && cross-env BUILD_TYPE=ALL rollup -c",
    "build:watch": "npm run b:types && cross-env BUILD_TYPE=ALL rollup -c --watch",
    "ci": "npm run lint && npm run test-cov",
    "lint": "eslint src --fix --ext .ts,.tsx",
    "b:types": "tsc --emitDeclarationOnly"
  },
  "types": "types/index.d.ts",
  "repository": "https://github.com/johanzhu/engine-spine.git"
}
